type Notification {
  _id: ID!
  userId: String!
  message: String!
  isRead: Boolean!
}

type NotificationInput {
  userId: String!
  title: String!
  message: String!
  isRead: Boolean!
}

type NotificationResponse {
  message: String!
  isRead: Boolean!
}

type Query {
  getNotificationById(id: ID!): Notification!
}

type Mutation {
  createNotification(userId: String!, title: String!, message: String!, isRead: Boolean!): Notification!
}
